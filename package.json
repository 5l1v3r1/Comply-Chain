{
    "name": "gov.dol.complychain",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "cordova-android": "^7.1.4",
        "cordova-ios": "^4.5.5",
        "cordova-plugin-whitelist": "^1.3.3",
        "query-string": "^6.2.0",
        "react": "^16.8.2",
        "react-dom": "^16.8.2",
        "react-localization": "^1.0.13",
        "react-router-breadcrumbs-hoc": "^2.3.2",
        "react-router-dom": "^4.3.1",
        "react-scripts": "2.1.5",
        "semantic-ui-react": "^0.85.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "npm run build:semantic && npm run remove:www && react-scripts build",
        "build:win": "npm run build:semantic && npm run remove:www:win && react-scripts",
        "build:cordova": "npm run remove:www && npm run build:semantic && cross-env PUBLIC_URL=. react-scripts build && node ./scripts/_inject-cordova.js && mv build www",
        "build:cordova:win": "npm run remove:www:win && npm run build:semantic && cross-env PUBLIC_URL=. react-scripts build && node ./scripts/_inject-cordova.js && move build www",
        "build:semantic": "gulp --cwd ./src/semantic build-css build-assets",
        "watch:semantic": "npm run build:semantic && gulp --cwd ./src/semantic watch",
        "server": "node scripts/server.js",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "remove:www": "rm -rf www",
        "remove:www:win": "if exist www rd /s /q www"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {}
        },
        "platforms": [
            "ios",
            "android"
        ]
    },
    "devDependencies": {
        "cross-env": "^5.2.0",
        "gulp": "^3.9.1",
        "koa": "^2.5.2",
        "koa-logger": "^3.2.0",
        "koa-static-server": "^1.3.4",
        "semantic-ui": "^2.4.2"
    }
}
